<%- include('../../layouts/common/header.ejs') %>

<div class="container-scroller">
  <%- include('../../layouts/common/navbar.ejs') %>

  <div class="container-fluid page-body-wrapper">
    <%- include("../../layouts/common/main.ejs") %>

    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Contact Us Details</h4>

                <div class="table-responsive">
                  <table class="table table-bordered">
                    <tbody>
                      <tr>
                        <th>First Name</th>
                        <td><%= contacts.first_name %></td>
                      </tr>
                      <tr>
                        <th>Last Name</th>
                        <td><%= contacts.last_name %></td>
                      </tr>
                      <tr>
                        <th>Email</th>
                        <td><%= contacts.email %></td>
                      </tr>
                      <tr>
                        <th>Phone</th>
                        <td><%= contacts.phone %></td>
                      </tr>
                      <tr>
                        <th>Date</th>
                        <td><%= contacts.date %></td>
                      </tr>
                      <tr>
                        <th>Time</th>
                        <td><%= contacts.time %></td>
                      </tr>
                      <tr>
                        <th>Message</th>
                        <td><%= contacts.message %></td>
                      </tr>
                      <tr>
                        <th>Job Title</th>
                        <td>
                          <% if (contacts.job_title) { %>
                            <% 
                              const jobTitles = { 
                                '1': 'Business', 
                                '2': 'Intermediate', 
                                '3': 'Individual' 
                              }; 
                              const jobTitleValue = contacts.job_title.toString();
                            %>
                            <%= jobTitles[jobTitleValue] || 'N/A' %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                      </tr>
                      <tr>
                        <th>Launch Timeline</th>
                        <td>
                          <% if (contacts.launch_timeline) { %>
                            <% 
                              const timelines = { 
                                '1': 'CoPilot', 
                                '2': 'Build a Product/Service', 
                                '3': 'Technical Support/Query', 
                                '4': 'Sales/Partnership Query',
                                '5': 'Schedule a Demo',
                                '6': 'Others' 
                              };
                              const timelineValue = contacts.launch_timeline.toString().trim();
                            %>
                            <%= timelines[timelineValue] || 'N/A' %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>

                <div class="mt-3">
                  <a href="/admin/contact_us" class="btn btn-secondary">Back to List</a>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div> <!-- .content-wrapper -->
    </div> <!-- .main-panel -->
  </div> <!-- .page-body-wrapper -->
</div> <!-- .container-scroller -->

<%- include('../../layouts/common/footer.ejs') %>
