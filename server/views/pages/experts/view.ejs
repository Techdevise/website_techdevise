<%- include('../../layouts/common/header.ejs') %>

<div class="container-scroller">
  <%- include('../../layouts/common/navbar.ejs') %>

  <div class="container-fluid page-body-wrapper">
    <%- include("../../layouts/common/main.ejs") %>

    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Experts Details</h4>

                <div class="table-responsive">
                  <table class="table table-bordered">
                    <tbody>
                      <tr>
                        <th>Full Name</th>
                        <td><%= expert.fullname %></td>
                      </tr>
                      <tr>
                        <th>Business Email</th>
                        <td><%= expert.email %></td>
                      </tr>
                      <tr>
                        <th>Phone</th>
                        <td><%= expert.phone %></td>
                      </tr>
                      <tr>
                        <th>Company Name</th>
                        <td><%= expert.company_name %></td>
                      </tr>
                      <tr>
                        <th>Budget</th>
                     <td>
                          <% if (expert.budget) {
                            const jobTitles = {
                              '1': '$5k - $25k',
                              '2': '$25k - $50k',
                              '3': '$50k - $100k',
                              '4': '$100k+',
                            };
                            const jobTitleValue = expert.budget.toString();
                          %>
                            <%= jobTitles[jobTitleValue] || 'N/A' %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                      </tr>
                      <tr>
                        <th>Message</th>
                        <td><%= expert.message %></td>
                      </tr>
                      <tr>
                        <th>Job Title</th>
                        <td>
                          <% if (expert.job_title) {
                            const jobTitles = {
                              '1': 'Entrepreneur',
                              '2': 'Manager',
                              '3': 'Director',
                              '4': 'C-Level',
                              '5': 'Student',
                              '6': 'Others'
                            };
                            const jobTitleValue = expert.job_title.toString();
                          %>
                            <%= jobTitles[jobTitleValue] || 'N/A' %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                      </tr>
                      <tr>
                        <th>Launch Timeline</th>
                        <td>
                          <% if (expert.launch_timeline) {
                            const timelines = {
                              '1': 'Immediately',
                              '2': '2-3 Months',
                              '3': '4-6 Months',
                              '4': 'After 6 Months'
                            };
                            const timelineValue = expert.launch_timeline.toString().trim();
                          %>
                            <%= timelines[timelineValue] || 'N/A' %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>

                <div class="mt-3">
                  <a href="/admin/experts" class="btn btn-secondary">Back to List</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- .content-wrapper -->
    </div>
    <!-- .main-panel -->
  </div>
  <!-- .page-body-wrapper -->
</div>
<!-- .container-scroller -->

<%- include('../../layouts/common/footer.ejs') %>
