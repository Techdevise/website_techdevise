<%- include('../../layouts/common/header.ejs') %>

<div class="container-scroller">
  <%- include('../../layouts/common/navbar.ejs') %>

  <div class="container-fluid page-body-wrapper">
    <%- include("../../layouts/common/main.ejs") %>

    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Slider View</h4>

                <div class="table-responsive">
                  <table class="table table-bordered">
                    <tbody>
                      <tr>
                        <th>Title</th>
                        <td><%= slider.title %></td>
                      </tr>
                      <tr>
                        <th>Message</th>
                        <td><%= slider.message %></td>
                      </tr>
                      <tr>
                        <th>Type of Hire</th>
                        <td>
                          <% if (slider.type) {
                            const Hire = {
                              '1': 'React Native',
                              '2': 'Ai Integrated',
                              '3': 'Blockchain',
                              '4': "Seamless Vision",
                              '5': "Blockchain Consulting",
                              '6': "AI Services",
                            };
                            const hireValue = slider.type.toString();
                          %>
                            <%= Hire[hireValue] || 'N/A' %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                      </tr>
                     

                      <tr>
                        <th>image</th>
                        <td>
                          <% if (slider.image) { %>
                          <img
                            src="/images<%= slider.image %>"
                            alt="Uploaded Image"
                            style="
                              width: 200px;
                              height: auto;
                              border-radius: 4px;
                            "
                          />
                          <% } else { %> No file uploaded <% } %>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>

                <div class="mt-3">
                  <a href="/admin/slider" class="btn btn-secondary"
                    >Back to List</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- .content-wrapper -->
    </div>
    <!-- .main-panel -->
  </div>
  <!-- .page-body-wrapper -->
</div>
<!-- .container-scroller -->

<%- include('../../layouts/common/footer.ejs') %>
