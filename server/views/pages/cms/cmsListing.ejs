  <%- include('../../layouts/common/header.ejs') %>
       <div class="container-scroller">
     <%- include('../../layouts/common/navbar.ejs') %>
     <div class="container-fluid page-body-wrapper">
         <%- include("../../layouts/common/main.ejs") %>
          <div class="main-panel">

<!-- Load Summernote CSS -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

<!-- Dashboard Content Starts Here -->
  <div class="content-wrapper">
  <div class="row">
    <div class="col-12 col-md-12 col-lg-12">
      <div class="card">
        <form method="POST" action="/admin/cms/<%= cmss.id %>">
          <div class="card-header">
            <h4> Cms</h4>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" name="title" value="<%= cmss.title %>" readonly required>
            </div>

            <div class="form-group">
              <label for="content">Content</label>
              <textarea class="form-control" name="content" id="summernote" rows="5" required><%= cmss.content %></textarea>
            </div>
            <input type="text" name="id" class="form-control" value="<%=cmss.id%>" hidden required="">
          </div>
          <div class="card-footer text-right">
            <button type="submit" style='background-color: #157B6C;' class="btn text-white ">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
  <%- include('../../layouts/common/footer.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

<!-- Load Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.6/jquery.nicescroll.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>


<script>
  // Initialize Summernote on the textarea
  $(document).ready(function() {
    $('#summernote').summernote({
      placeholder: 'Enter content here...',
      tabsize: 2,
      height: 120, // Set the editor height
      toolbar: [
        ['style', ['style']],
        ['font', ['bold', 'underline', 'clear']],
        ['color', ['color']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['table', ['table']],
        ['insert', ['link', 'picture', 'video']],
        ['view', ['fullscreen', 'codeview', 'help']]
      ]
    });
  });
</script>