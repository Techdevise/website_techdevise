<%- include('../../layouts/common/header.ejs') %>

<div class="container-scroller">
  <%- include('../../layouts/common/navbar.ejs') %>

  <div class="container-fluid page-body-wrapper">
    <%- include("../../layouts/common/main.ejs") %>

    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Career Details</h4>

                <div class="table-responsive">
                  <table class="table table-bordered">
                    <tbody>
                      <tr>
                        <th>Job Title</th>
                        <td><%= career.joboption?.jobtitle?.title %></td>
                      </tr>
                       <!-- <tr>
                        <th>Job Sub Title</th>
                        <td><%= jobs.joboption?.jobSub_title?.name %></td>
                      </tr> -->
                      <tr>
                        <th>First Name</th>
                        <td><%= career.first_name %></td>
                      </tr>
                      <tr>
                        <th>Last Name</th>
                        <td><%= career.last_name %></td>
                      </tr>
                      <tr>
                        <th>Email</th>
                        <td><%= career.email %></td>
                      </tr>
                      <tr>
                        <th>Phone</th>
                        <td><%= career.phone %></td>
                      </tr>
                        <tr>
                        <th>Message</th>
                        <td><%= career.message %></td>
                      </tr>
                        <tr>
                        <th>Linkedin Profile</th>
                        <td><%= career.linkedin_profile|| 'N/A' %></td>
                      </tr>
                        <tr>
                        <th>About Us</th>
                        <td><%= career.about_us|| 'N/A' %></td>
                      </tr>
                       <tr>
                        <th>Questions from the employer</th>
                        <td><%= career.questions_employe|| 'N/A' %></td>
                      </tr>
                       <tr>
                        <th>Located</th>
                        <td><%= career.located|| 'N/A' %></td>
                      </tr>
                          <tr>
                        <th>Date</th>
                        <td><%= career.createdAt %></td>
                      </tr>
                      <tr>
                        <th>PDF Resume</th>
                        <td>
                          <% if (career.pdf_file) { %>
                            <a href="<%= career.pdf_file %>" target="_blank">
                              <img src="/assets/images/pdf-file.png" alt="PDF Preview" style="width: 50px; height: auto;" />
                              View PDF
                            </a>
                          <% } else { %>
                            No file uploaded
                          <% } %>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>

                <div class="mt-3">
                  <a href="/admin/jobs" class="btn btn-secondary">Back to List</a>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div> <!-- .content-wrapper -->
    </div> <!-- .main-panel -->
  </div> <!-- .page-body-wrapper -->
</div> <!-- .container-scroller -->

<%- include('../../layouts/common/footer.ejs') %>
