     <%- include('../../layouts/common/navbar.ejs') %>
     <div class="container-fluid page-body-wrapper">
         <%- include("../../layouts/common/main.ejs") %>
          <div class="main-panel">
    <div class="content-wrapper">
   <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Add Job Option</h4>

                    <form class="forms-sample" method="POST" action="/admin/joboption/create">
                         <div class="form-group">
  <label for="job_id">Job Title</label>
  <select class="form-control" name="job_id" id="job_id">
    <option value="" disabled selected>Select</option>
    <% job.forEach(j => { %>
      <option value="<%= j.id %>"><%= j.title %></option>
    <% }); %>
  </select>
</div>
                      <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" class="form-control" name="location" id="location" placeholder="location">
                      </div>
                      <div class="form-group">
                        <label for="responsibilities">Responsibilities</label>
                        <input type="text" class="form-control" name="responsibilities" id="responsibilities" placeholder="responsibilities">
                      </div>
                      <div class="form-group">
                        <label for="requirements">Requirements</label>
                        <input type="text" class="form-control" name="requirements" id="requirements" placeholder="requirements">
                      </div>
                      <div class="form-group">
                        <label for="experience">Experience</label>
                        <input type="text" class="form-control" name="experience" id="experience" placeholder="experience">
                      </div>
                      <button type="submit" class="btn text-white me-2" style='background-color: #157B6C;'>Submit</button>
                       <a href="/admin/joboption" class="btn btn-light">Cancel</a>
                    </form>
                  </div>
                </div>
              </div>
              </div>
              </div>
     </div>
