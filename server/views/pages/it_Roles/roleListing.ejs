<%- include('../../layouts/common/header.ejs') %>
<div class="container-scroller">
  <%- include('../../layouts/common/navbar.ejs') %>
  <div class="container-fluid page-body-wrapper">
    <%- include("../../layouts/common/main.ejs") %>
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <!-- <div class="page-header">
              <h3 class="page-title"> Form elements </h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Forms</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Form elements</li>
                </ol>
              </nav>
            </div> -->
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Role Listing</h4>
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Sr.No</th>
                        <th>Job</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone No</th>
                        <th>Company Name</th>
                        <th>image</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% role.forEach((role, index) => { %>
                      <tr id="role-<%= role.id %>">
                        <td><%= index + 1 %></td>
                        <td><%= role.It_Role?.name %></td>
                        <td><%= role.first_name %></td>
                        <td><%= role.last_name %></td>
                        <td><%= role.email %></td>
                        <td><%= role.phone %></td>
                        <td><%= role.company_name %></td>
                        <td>
                          <% if (role.image) { %>
                          <a href="<%= role.pdf_file %>" target="_blank">
                            <img
                              src="/assets/images/pdf-file.png"
                              alt="PDF Preview"
                              style="width: 50px; height: auto"
                            />
                          </a>
                          <% } else { %> No file <% } %>
                        </td>
                        <td>
                          <a href="/admin/jobs/<%= role.id %>" title="View">
                            <i class="fas fa-eye text-primary fa-lg"></i>
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../../layouts/common/footer.ejs') %>
