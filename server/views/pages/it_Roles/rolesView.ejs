<%- include('../../layouts/common/header.ejs') %>

<div class="container-scroller">
  <%- include('../../layouts/common/navbar.ejs') %>

  <div class="container-fluid page-body-wrapper">
    <%- include("../../layouts/common/main.ejs") %>

    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Roles Details</h4>

                <div class="table-responsive">
                  <table class="table table-bordered">
                    <tbody>
                      <tr>
                        <th>Role</th>
                        <td><%= role.It_Role?.name %></td>
                      </tr>
                      <tr>
                        <th>First Name</th>
                        <td><%= role.first_name %></td>
                      </tr>
                      <tr>
                        <th>Last Name</th>
                        <td><%= role.last_name %></td>
                      </tr>
                      <tr>
                        <th>Email</th>
                        <td><%= role.email %></td>
                      </tr>
                      <tr>
                        <th>Phone</th>
                        <td><%= role.phone %></td>
                      </tr>
                      <tr>
                        <th>Just Confirm</th>
                        <td><%= role.just_confirm %></td>
                      </tr>
                      <tr>
                        <th>Company Name</th>
                        <td><%= role.company_name %></td>
                      </tr>
                      <tr>
                        <th>Job Title</th>
                        <td><%= role.job_title %></td>
                      </tr>
                    
                      <tr>
                        <th>Type of Hire</th>
                        <td>
                          <% if (role.type_of_hire) {
                            const Hire = {
                              '1': 'Contractors',
                              '2': 'Permanent Hires',
                              '3': 'Project-Based / Bulk Staffing',
                              '4': "I'm Not Sure",
                            };
                            const hireValue = role.type_of_hire.toString();
                          %>
                            <%= Hire[hireValue] || 'N/A' %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                      </tr>
                      <tr>
                        <th>Number of Job</th>
                        <td><%= role.number_of_job %></td>
                      </tr>
                      <tr>
                        <th>Help</th>
                        <td><%= role.help %></td>
                      </tr>
                      <tr>
                        <th>Position</th>
                        <td><%= role.position %></td>
                      </tr>

                      <tr>
                        <th>image</th>
                        <td>
                          <% if (role.image) { %>
                          <img
                            src="/images<%= role.image %>"
                            alt="Uploaded Image"
                            style="
                              width: 80px;
                              height: auto;
                              border-radius: 4px;
                            "
                          />
                          <% } else { %> No file uploaded <% } %>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>

                <div class="mt-3">
                  <a href="/admin/role" class="btn btn-secondary"
                    >Back to List</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- .content-wrapper -->
    </div>
    <!-- .main-panel -->
  </div>
  <!-- .page-body-wrapper -->
</div>
<!-- .container-scroller -->

<%- include('../../layouts/common/footer.ejs') %>
